<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="600dp"
    android:background="@drawable/popup_background">


    <ScrollView
        android:layout_width="400dp"
        android:layout_height="590dp"
        android:padding="15dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/help_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Title 1"
                android:textColor="@color/gray_super_light"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/help_text_1"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/help_title_1"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:text="@string/lorem_ipsum"
                android:textColor="@color/gray_super_light"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/help_title_1"
                app:layout_constraintEnd_toEndOf="@+id/help_title_1"
                app:layout_constraintTop_toBottomOf="@+id/help_title_1" />

            <TextView
                android:id="@+id/help_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Title 2"
                android:textColor="@color/gray_super_light"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="@+id/help_title_1"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/help_title_1"
                app:layout_constraintTop_toBottomOf="@+id/help_text_1" />

            <TextView
                android:id="@+id/help_text_2"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/help_title_1"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:text="@string/lorem_ipsum"
                android:textColor="@color/gray_super_light"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@+id/help_title_2"
                app:layout_constraintStart_toStartOf="@+id/help_title_2"
                app:layout_constraintTop_toBottomOf="@+id/help_title_2" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</RelativeLayout>