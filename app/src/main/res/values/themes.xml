<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Orange_Theme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_orange</item>
        <item name="colorPrimaryVariant">@color/primary_orange_dark</item>
        <item name="colorOnPrimary">@color/primary_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_orange</item>
        <item name="colorSecondaryVariant">@color/primary_orange_dark</item>
        <item name="colorOnSecondary">@color/primary_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_black</item>
        <!-- Customize your theme here. -->
    </style>


